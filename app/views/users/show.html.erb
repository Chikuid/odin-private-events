
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
  </aside>
  <div class="col-md-8">
    <% if @user.events.any? %>
      <h3>Hosted Events (<%= @user.events.count %>)</h3>
      <ol class="microposts">
        <%= render @events %>
      </ol>
    <% end %>
  </div>
</div>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="event_form">
        <%= render 'shared/event_form' %>
      </section>
    </aside>
  </div>
<% end %>
